{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸš€ Scaffold ALL Repositories",
      "type": "shell",
      "command": "${workspaceFolder}/venv/bin/python",
      "args": [
        "src/main.py",
        "batch",
        "."
      ],
      "group": {
        "kind": "build",a
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "ðŸŽ¯ Scaffold Specific Repository",
      "type": "shell",
      "command": "${workspaceFolder}/venv/bin/python",
      "args": [
        "src/main.py",
        "single",
        "./repos/${input:repoName}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "repoName",
      "type": "promptString",
      "description": "Enter the folder name of the repository (inside /repos/)",
      "default": "my-app"
    }
  ]
}